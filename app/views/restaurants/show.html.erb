<div class="container">
  <h1><%= @restaurant.name %></h1>
  <h2><%= @restaurant.category %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <br>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  <% end %>
  <br>
  <p class="btn btn-primary"><%= link_to "Add a new Review", new_restaurant_review_path(@restaurant) %></p>
</div>
